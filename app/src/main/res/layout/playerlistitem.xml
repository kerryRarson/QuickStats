<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblName"
            android:text="Playaaa"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblPos"
            android:layout_toRightOf="@+id/lblName"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:text="Pos"/>
        </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/measurableLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hgtLabel"
            android:text="@string/label_hgt"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hgt"
            android:layout_toRightOf="@+id/hgtLabel"
            android:layout_marginLeft="6dp"
            android:paddingRight="10dp"
            android:text="xxx"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wgtLabel"
            android:text="@string/label_wgt"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/hgt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/wgtLabel"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="YYY"
            android:id="@+id/wgt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:layout_toRightOf="@+id/wgt"
            android:id="@+id/spdLabel"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="@string/label_spd"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/spdLabel"
            android:text="AAA.AA"
            android:id="@+id/spd"/>

    </RelativeLayout>

</LinearLayout>
